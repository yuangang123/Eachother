<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="#f3f5f9">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/PhoneCertificationOfRegister_back">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:gravity="center"
                android:layout_gravity="center" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机认证"
            android:layout_centerInParent="true"
            android:textSize="19sp"
            android:textColor="#18b4ed" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/PhoneCertificationOfRegister_back"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/PhoneCertificationOfRegister_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请填写手机号码"
            android:singleLine="true"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:id="@+id/PhoneCertificationOfRegister_get_yanzhengma"
            android:text="获取验证码"
            android:textSize="18dp"
            android:gravity="center" />
        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/PhoneCertificationOfRegister_get_yanzhengma"-->
            <!--android:text="获取验证码" />-->

    </LinearLayout>

    <EditText
        android:id="@+id/PhoneCertificationOfRegister_yanzhengma_number"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:hint="请填写验证码"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:text="下一步"
        android:layout_marginTop="20sp"
        android:id="@+id/PhoneCertificationOfRegister_next"/>


</LinearLayout>


